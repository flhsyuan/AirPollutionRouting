<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topBg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <ImageView
        android:id="@+id/pic_unimleb"
        android:paddingVertical="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/unimelb"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/organization"
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Organization:  The University of Melbourne"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:layout_below="@+id/pic_unimleb"/>

    <TextView
        android:paddingVertical="10dp"
        android:paddingLeft="10dp"
        android:id="@+id/text_supervisor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supervisor:  Professor Richard Sinnott"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:layout_below="@+id/organization"/>

    <TextView

        android:paddingLeft="10dp"
        android:id="@+id/text_designers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Designers:  Yiqun Wang &amp; Yuan Wang"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:layout_below="@+id/text_supervisor"/>


    <TextView
        android:id="@+id/text_data_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Source: "
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:layout_below="@+id/text_designers"
        android:paddingVertical="25dp"
        android:paddingLeft="10dp"
        />


    <ImageButton
        android:id="@+id/btn_aircasting"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/aircasting"
        android:layout_below="@+id/text_designers"
        android:layout_toRightOf="@+id/text_data_source"/>


</RelativeLayout>